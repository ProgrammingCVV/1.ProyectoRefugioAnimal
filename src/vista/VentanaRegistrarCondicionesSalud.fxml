<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.RegistrarCondicionesSaludController" prefHeight="400.0" prefWidth="600.0">
    <children>
       
        <Label layoutX="200.0" layoutY="14.0" text="Registrar Condiciones de Salud" />

       
        <Label layoutX="50.0" layoutY="50.0" text="Seleccionar Animal:" />
        <ComboBox fx:id="comboAnimal" layoutX="200.0" layoutY="50.0" prefWidth="250.0" />

        <Label layoutX="50.0" layoutY="100.0" text="Observaciones:" />
        <TextArea fx:id="textObservaciones" layoutX="200.0" layoutY="100.0" prefHeight="80.0" prefWidth="250.0" />

        <Label layoutX="50.0" layoutY="200.0" text="Peso (kg):" />
        <TextField fx:id="textPeso" layoutX="200.0" layoutY="200.0" prefWidth="250.0" />

       
        <Label layoutX="50.0" layoutY="250.0" text="Vacunas:" />
        <TextField fx:id="textVacunas" layoutX="200.0" layoutY="250.0" prefWidth="250.0" />

      
        <Label layoutX="50.0" layoutY="300.0" text="Fecha de Registro:" />
        <DatePicker fx:id="dateRegistro" layoutX="200.0" layoutY="300.0" prefWidth="250.0" />

        
        <Button fx:id="btnGuardar" layoutX="250.0" layoutY="350.0" mnemonicParsing="false" text="Guardar" onAction="#registrarCondicionesSalud" />
    </children>
</AnchorPane>
